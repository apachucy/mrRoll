<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/section_wrapper"
    android:layout_width="match_parent"
    android:layout_height="@dimen/section_normal_height"
    android:layout_margin="@dimen/no_padding"
    android:background="@color/colorPrimary"
    android:padding="@dimen/no_padding">

    <RelativeLayout
        android:id="@+id/section_adjustment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:clickable="false"
        android:focusable="false"
        android:padding="0dp">

        <CheckBox
            android:id="@+id/checkbox_section_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/item_margin_small"
            android:layout_marginStart="@dimen/item_margin_normal"
            android:layout_toStartOf="@+id/text_section_notification_number"

            android:lines="1"
            android:textAlignment="viewStart"
            tools:text="Food" />

        <TextView
            android:id="@id/text_section_notification_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/item_margin_small"
            android:layout_toStartOf="@+id/indication_arrow"
            android:elegantTextHeight="false"
            android:gravity="center_horizontal"
            android:maxLength="5"
            android:singleLine="true"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:text="(99)" />

        <ImageView
            android:id="@+id/indication_arrow"
            android:layout_width="@dimen/section_icon_size"
            android:layout_height="@dimen/section_icon_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/padding_image"
            android:contentDescription="@string/category_section_description_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_item_swipe_right" />
    </RelativeLayout>

</RelativeLayout>

